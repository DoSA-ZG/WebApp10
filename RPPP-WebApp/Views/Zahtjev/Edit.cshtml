@model RPPP_WebApp.ViewModels.ZahtjevViewModel

@{
    ViewBag.Title = "Ažuriranje zahtjeva";
}

<form id="dokument_form" method="post" asp-action="Edit"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending">
    <input type="hidden" asp-for="IdZahtjev" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <div><span asp-validation-for="Opis" class="text-danger"></span></div>
        <textarea asp-for="Opis" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Prioritet"></label>
        <div><span asp-validation-for="Prioritet" class="text-danger"></span></div>
        <input asp-for="Prioritet" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vrsta"></label>
        <div><span asp-validation-for="Vrsta" class="text-danger"></span></div>
        <input asp-for="Vrsta" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div> 

</form>
<div>

<table class="table table-sm table-striped table-hover" id="table-zadaci">
    <thead>
        <tr>
            <th>IdZadatak</th>
            <th>Status</th>
            <th>Aktivan</th>
            <th>Opis</th>
            <th>IdZahtjev</th>
            <th>NositeljZadatka</th>
            <th>IdPrioritetZadatka</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var zadatak in Model.Zadacis)
        {
            <tr>
                    <form asp-route-id="@zadatak.IdZadatak" asp-controller="Zadatak" asp-action="Edit2"
                          asp-route-page="@ViewBag.Page"
                          asp-route-sort="@ViewBag.Sort"
                          asp-route-ascending="@ViewBag.Ascending"
                          method="post">
                        <div asp-validation-summary="All"></div>
                    <td>
                        <div class="form-group">
                            <label asp-for="IdZadatak"></label>
                            <div><span asp-validation-for="IdZadatak" class="text-danger"></span></div>
                            <input asp-for="IdZadatak" class="form-control" value="@zadatak.IdZadatak" readonly />
                        </div>
                    </td>
                        <td>
                        <div class="form-group">
                            <label asp-for="Status"></label>
                            <div><span asp-validation-for="Status" class="text-danger"></span></div>
                            <input asp-for="Status" class="form-control" value="@zadatak.Status" />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="Aktivan"></label>
                            <div><span asp-validation-for="Aktivan" class="text-danger"></span></div>
                            <input asp-for="Aktivan" class="form-control" value="@zadatak.Aktivan" />
                    </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="Opis"></label>
                            <div><span asp-validation-for="Opis" class="text-danger"></span></div>
                            <input asp-for="Opis" class="form-control" value="@zadatak.Opis"/>
                        </div>
                        </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="IdZahtjev"></label>
                            <div><span asp-validation-for="IdZahtjev" class="text-danger"></span></div>
                            <input asp-for="IdZahtjev" class="form-control" value="@zadatak.IdZahtjev" readonly />
                        </div>
                        </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="NositeljZadatka"></label>
                            <div><span asp-validation-for="NositeljZadatka" class="text-danger"></span></div>
                            <input asp-for="NositeljZadatka" class="form-control" value="@zadatak.NositeljZadatka" />
                        </div>
                        </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="IdPrioritetZadatka"></label>
                            <div><span asp-validation-for="IdPrioritetZadatka" class="text-danger"></span></div>
                            <input asp-for="IdPrioritetZadatka" class="form-control" value="@zadatak.IdPrioritetZadatka" />
                        </div>
                        </td>
                    <td>
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">Spremi</button>
                        </div>
                        </td>
                    </form>
                    <td>
                    <form asp-action="Delete2" method="post" asp-controller="Zadatak"
                          asp-route-id="@zadatak.IdZadatak">
                        <input type="hidden" name="IdZadatak" value="@zadatak.IdZadatak" />
                        <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši"><i class="fas fa-trash-alt">Obrisi</i></button>
                        </form>
                    </td>
				</tr>
        }

            <tr>
                <form asp-action="Create2" method="post" asp-controller="Zadatak">
                <td>
                    <div class="mb-3">
                        <label asp-for="IdZadatak" class="form-label"></label>
                        <input asp-for="IdZadatak" class="form-control" value="" />
                        <div class="form-text"><span asp-validation-for="IdZadatak" class="text-danger"></span></div>
                    </div>
                </td>
                <td>
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <input asp-for="Status" class="form-control" value="" />
                        <div class="form-text"><span asp-validation-for="Status" class="text-danger"></span></div>
                    </div>
                </td>
                <td>
                    <div class="mb-3">
                        <label asp-for="Aktivan" class="form-label"></label>
                        <input asp-for="Aktivan" class="form-control" value="" />
                        <div class="form-text"><span asp-validation-for="Aktivan" class="text-danger"></span></div>
                    </div>
                </td>
                <td>
                    <div class="mb-3">
                        <label asp-for="Opis" class="form-label"></label>
                        <input asp-for="Opis" class="form-control" value="" />
                        <div class="form-text"><span asp-validation-for="Opis" class="text-danger"></span></div>
                    </div>
                </td>
                <td>
                    <div class="mb-3">
                        <label asp-for="IdZahtjev" class="form-label"></label>
                        <input asp-for="IdZahtjev" class="form-control" value="" />
                        <div class="form-text"><span asp-validation-for="IdZahtjev" class="text-danger"></span></div>
                    </div>
                </td>
                <td>
                    <div class="mb-3">
                        <label asp-for="NositeljZadatka" class="form-label"></label>
                        <input asp-for="NositeljZadatka" class="form-control" value="" />
                        <div class="form-text"><span asp-validation-for="NositeljZadatka" class="text-danger"></span></div>
                    </div>
                </td>
                <td>
                    <div class="mb-3">
                        <label asp-for="IdPrioritetZadatka" class="form-label"></label>
                        <input asp-for="IdPrioritetZadatka" class="form-control" value="" />
                        <div class="form-text"><span asp-validation-for="IdPrioritetZadatka" class="text-danger"></span></div>
                    </div>
                </td>
                <td>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">Dodaj</button>
                    </div>
                </td>
                </form>
            </tr>

    </tbody>
</table>

</div>

@section scripts {
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/zahtjev.js" asp-append-version="true"></script>
}
